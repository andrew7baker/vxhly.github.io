*::selection {
  background: #22979b;
  color: #fff;
}

html,
body {
  scroll-behavior: smooth;
}

div[class~="language-text"]:before {
  content: "text";
}

div[class~="language-yml"]:before {
  content: "yml";
}

div[class*="language-"] pre {
  user-select: text;
}

p {
  margin: 1em auto;
}

p code {
  user-select: all;
}

.page > div {
  max-width: 1024px !important;
}

.fullscreen-wrapper {
  display: none;
}

.timeline-wrapper {
  top: 3.6rem;
}

h1 + ul,
h1 + ol,
h2 + ul,
h2 + ol,
h3 + ul,
h3 + ol,
h4 + ul,
h4 + ol,
h5 + ul,
h5 + ol,
h6 + ul,
h6 + ol {
  margin: 1em 0;
}

.comments-wrapper {
  max-width: 1024px !important;
  width: 1024px !important;
}